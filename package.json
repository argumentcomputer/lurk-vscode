{
  "name": "lurk",
  "displayName": "lurk",
  "description": "A Visual Studio Code extension for the Lurk programming language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.2"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/argumentcomputer/lurk-vscode/"
  },
  "contributes": {
    "languages": [
      {
        "id": "lurk",
        "aliases": [
          "lurk"
        ],
        "extensions": [
          ".lurk"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lurk",
        "scopeName": "source.lurk",
        "path": "./syntaxes/lurk.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "lurkREPL.start",
        "title": "Lurk REPL: Start"
      },
      {
        "command": "lurkREPL.sendSelected",
        "title": "Lurk REPL: Send Selected Text"
      }
    ],
    "keybindings": [
      {
        "command": "lurkREPL.start",
        "key": "alt+enter"
      },
      {
        "command": "lurkREPL.sendSelected",
        "key": "alt+right"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lurk REPL",
      "properties": {
        "lurkREPL.lurkRunCommand": {
          "type": "string",
          "default": "/home/user/.cargo/bin/lurk",
          "description": "Full path to the lurk binary"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  },
  "activationEvents": []
}
